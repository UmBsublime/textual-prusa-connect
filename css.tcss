.--lighter-background {
  background: $background-lighten-3;
}

.--dimgrey-background {
  background: #494949;
}

.--cell {
  border-right: round grey;

}

.--app-paused {
  background: $error-darken-1  50%;
}

.--dashboard-category {
  border: round lightblue;
  border-title-color: black;
  border-title-background: lightblue;
  background:  $background-lighten-2;
  padding-top: 1;
  margin-bottom: 1;
}

#icon {
  width: auto;
  border: tall darkviolet;
  background: blueviolet;
}

.--icon {
  width: auto;
  border: tall darkviolet;
  background: blueviolet;
}

Vertical, Horizontal {
  height: auto;
}

